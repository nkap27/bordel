<h3>Comments</h3>

<% @event.comments.each do |comment| %>
  <p><%= comment.user.username %></p>
  <p><%= comment.text %></p>
  <p><%= comment.created_at.strftime("%m/%d/%Y at %I:%M%p") %></p>
<% end %>
