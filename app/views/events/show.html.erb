<h1><%= @event.title %></h1>

<p>Host: <%= link_to @event.host.name, user_path(@event.host) %></p>
<p>Description: <%= @event.description %></p>

<p>Time: <%= @event.time.strftime("%m/%d/%Y at %I:%M%p") %></p>

<h3> Venue Info </h3>
<p>Venue: <%= @event.venue.name %></p>
<%= @event.venue.address%>,  <%= link_to 'Website', @event.venue.url %>

<h3>Casse-Cou Attending</h3>

<% @event.users.each do |user| %>
  <p><%= link_to user.name, user_path(user) %></p>
<% end %>

<%= button_to "Je suis lÃ ! Join this event!", user_events_path(@event), method: :patch %>

<h3>Comments</h3>

<% @event.comments.each do |comment| %>
  <p><%= comment.user.username %></p>
  <p><%= comment.text %></p>
  <p><%= comment.created_at.strftime("%m/%d/%Y at %I:%M%p") %></p>
<% end %>
