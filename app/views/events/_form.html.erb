<%= form_for @event do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %></p>

  <p><%= f.label :capacity %>
  <%= f.number_field :capacity %></p>

  <p><%= f.label :time %>
  <%= f.text_field :time %>
  Enter as: "10/15/2018 at 11:00am"</p>

  <p><%= f.label :description %>
  <%= f.text_area :description %></p>

  <%= f.label :venue %>
  <%= f.collection_select :venue_id, Venue.all, :id, :name %>

  <p><%= f.submit %></p>
<% end %>
