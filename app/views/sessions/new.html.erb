<h1>Login</h1>

<%= link_to 'Sign Up', signup_path %>

<h3><%= flash[:notice] %></h3>

<%= form_tag login_path, method: :post do %>
  <%= label_tag "Username" %>
  <%= text_field_tag :username %>
  <%= label_tag "Password" %>
  <%= password_field_tag :password %>

  <%= submit_tag "Login" %>
<% end %>
